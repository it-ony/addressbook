<?xml version="1.0"?>
<app:AddressBookClass xmlns="http://www.w3.org/1999/xhtml"
                      xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:view="app.view" xmlns:field="js.ui.field">
    <div class="container">
        <h1>Address Book</h1>
        <div>
            <form onsubmit="submitForm">
                <fieldset>
                    <legend>Create new contact</legend>
                    <field:Text label="Firstname" value="{{person.firstName}}" />
                    <field:Text label="Lastname" value="{{person.lastName}}" />
                    <field:Text label="Email" value="{{person.email}}" />
                    <field:Text label="Phone" value="{{person.phone}}" />
                    <ui:Field>
                        <input type="submit" value="Save"/>
                    </ui:Field>
                </fieldset>
            </form>
            <h3>Preview</h3>
            <view:PersonView class="preview" person="{person}"/>
        </div>
        <h2>Contacts</h2>
        <ui:ItemsView items="{persons}" itemKey="person" tagName="table">
            <js:Template name="item">
                <tr>
                    <td>
                        <view:PersonView class="preview" person="{person}"/>
                    </td>
                    <td>
                        <a onclick="onRemove">Remove</a>
                    </td>
                </tr>
            </js:Template>
        </ui:ItemsView>
    </div>
</app:AddressBookClass>