<?xml version="1.0"?>
<app:AddressBookClass xmlns="http://www.w3.org/1999/xhtml"
                      xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app">
    <div class="container">
        <h1>Address Book</h1>
        <div>
            <form onsubmit="submitForm">
                <fieldset>
                    <legend>Create new contact</legend>
                    <div>
                        <label for="firstName">Firstname</label>
                        <input id="firstName" type="text" value="{{person.firstName}}"/>
                    </div>
                    <div>
                        <label for="lastName">Lastname</label>
                        <input id="lastName" type="text" value="{{person.lastName}}"/>
                    </div>
                    <div>
                        <label for="phone">Phonenumber</label>
                        <input id="phone" type="text" value="{{person.phone}}"/>
                    </div>
                    <div>
                        <input type="submit" value="Save"/>
                    </div>
                </fieldset>
            </form>
            <h3>Preview</h3>
            <div class="preview">
                <p>
                    <span>Name:</span> {person.fullName()}
                </p>
                <p>
                    <span>Phone:</span> {person.phone}
                </p>
            </div>
        </div>
        <h2>Contacts</h2>
        <ui:ItemsView items="{persons}" itemKey="person" tagName="table">
            <js:Template name="item">
                <tr>
                    <td>
                        {person.fullName()}
                    </td>
                    <td>
                        {person.phone}
                    </td>
                    <td>
                        <a onclick="onRemove">Remove</a>
                    </td>
                </tr>
            </js:Template>
        </ui:ItemsView>
    </div>
</app:AddressBookClass>