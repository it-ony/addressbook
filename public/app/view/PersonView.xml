<ui:View xmlns:ui="js.ui"
         xmlns="http://www.w3.org/1999/xhtml" person="">
    <p>
        <span>Name:</span>
        {person.fullName()}
    </p>
    <p visible="{person.email}">
        <span>Email:</span>
        {person.email}
    </p>
    <p visible="{person.phone}">
        <span>Phone:</span>
        {person.phone}
    </p>
</ui:View>